<header class="mt-24 text-center select-none animate-fade-in-up">
    <h1
        id="clock"
        class="text-7xl font-bold tracking-tight drop-shadow-2xl"
        aria-live="polite"
        aria-label="当前时间"
    >
        --:--:--
    </h1>
    <p id="date" class="text-xl font-medium opacity-90 mt-1" aria-live="polite">
        载入中...
    </p>
    <div
        id="ip-info"
        class="mt-4 inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-white/10 text-xs text-white/70 opacity-0 transition-opacity duration-1000 cursor-pointer hover:border-white/30 hover:text-white transition-colors"
        role="button"
        tabindex="0"
        aria-label="点击查看 IP 详情"
    >
        <i class="fas fa-location-dot text-[10px]" aria-hidden="true"></i>
        <span id="ip-address">正在同步网络数据...</span>
    </div>
</header>
