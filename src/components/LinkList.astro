---
import { CATEGORIES } from "../data/links";
import { ICON_API } from "../lib/config";
---

<nav class="w-full max-w-[1500px] px-10 mt-12 flex-grow" aria-label="链接导航">
    {
        CATEGORIES.map((cat, catIndex) => (
            <section
                class="mb-10 category-section"
                data-collapsed="false"
                aria-labelledby={`category-${catIndex}`}
            >
                <h2
                    id={`category-${catIndex}`}
                    class="text-2xl font-bold mb-6 pl-2 drop-shadow-md category-header flex items-center justify-between gap-3"
                >
                    <span class="category-title">{cat.title}</span>
                    <button
                        type="button"
                        class="category-toggle-btn inline-flex items-center gap-2 text-sm font-medium text-white/80 bg-white/5 hover:bg-white/10 px-3 py-1.5 rounded-full border border-white/10"
                        aria-expanded="true"
                        aria-controls={`category-content-${catIndex}`}
                    >
                        <span class="category-toggle-label">收起</span>
                        <i
                            class="fas fa-chevron-up category-toggle-icon text-xs"
                            aria-hidden="true"
                        />
                    </button>
                </h2>
                <div class="category-wrapper grid grid-rows-[1fr] transition-[grid-template-rows] duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)]">
                    <ul
                        id={`category-content-${catIndex}`}
                        class="category-content overflow-hidden grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-5 pb-1 list-none p-0 m-0"
                    >
                        {cat.links.map((link, index) => {
                            const shouldFetchIcon = link.useIcon !== false;
                            return (
                                <li>
                                    <a
                                        href={link.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="glass sun-card flex items-center p-5 rounded-[1.8rem] group relative animate-fade-in-up h-full"
                                        style={`animation-delay: ${index * 50 + 100}ms`}
                                        data-url={link.url}
                                        title={`访问 ${link.name}`}
                                    >
                                        <div class="w-12 h-12 flex-shrink-0 rounded-2xl bg-white/10 flex items-center justify-center overflow-hidden p-2.5 text-2xl transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                                            {shouldFetchIcon ? (
                                                <>
                                                    <img
                                                        src={
                                                            ICON_API + link.url
                                                        }
                                                        alt=""
                                                        loading="lazy"
                                                        decoding="async"
                                                        fetchpriority="low"
                                                        crossorigin="anonymous"
                                                        class="w-full h-full object-contain transition-opacity opacity-0"
                                                        onload="this.style.opacity=1"
                                                        onerror="this.nextElementSibling.classList.add('flex');this.nextElementSibling.classList.remove('hidden');this.style.display='none'"
                                                    />
                                                    <div
                                                        class="hidden w-full h-full items-center justify-center"
                                                        style={`color:${link.color}`}
                                                        aria-hidden="true"
                                                    >
                                                        <i class={link.icon} />
                                                    </div>
                                                </>
                                            ) : (
                                                <div
                                                    class="flex w-full h-full items-center justify-center"
                                                    style={`color:${link.color}`}
                                                    aria-hidden="true"
                                                >
                                                    <i class={link.icon} />
                                                </div>
                                            )}
                                        </div>
                                        <span class="ml-4 overflow-hidden text-white/90 font-bold truncate">
                                            {link.name}
                                        </span>
                                        <span
                                            class="status-indicator absolute top-3 right-3 w-3 h-3 rounded-full bg-gray-400 opacity-50 transition-all"
                                            title="检测中..."
                                            aria-hidden="true"
                                        />
                                    </a>
                                </li>
                            );
                        })}
                    </ul>
                </div>
            </section>
        ))
    }
</nav>
